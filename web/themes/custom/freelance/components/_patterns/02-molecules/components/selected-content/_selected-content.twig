{% set component_blockname = 'component__selected-content' %}
{% set type = featured_teaser ? 'panel' : 'list' %}

<div class="component {{component_blockname}} {{component_blockname}}--{{type}}">
  {{ content.contextual_links }}
  {% if featured_teaser %}

    {% if heading %}
      {% include "@atoms/02-text/00-headings/_heading.twig" with {
        "heading_level": 2,
        "heading": heading,
        "heading_base_class": 'title',
        'heading_blockname': component_blockname,
      } %}
    {% endif %}

    {% include "@molecules/content-teaser/content-teaser.twig" with featured_teaser %}
    {# Remove the heading from the teaser-list #}
    {% set heading = null %}
  {% endif %}
  {% include '@organisms/teaser-list/teaser-list.twig' with {
    "list_heading": heading,
    "teasers": teasers
  }%}
</div>
