<div class="component component__teaser-list">
  {% if list_heading %}
    {% include "@atoms/02-text/00-headings/_heading.twig" with {
      "heading_level": 2,
      "heading": list_heading,
      "heading_modifiers": ['alt'],
      "heading_base_class": 'title',
      'heading_blockname': 'component__teaser-list'
    } %}
  {% endif %}
  {% if pl %}
    {% if teaser_images %}
      {% for i in teasers %}
        {% include "@molecules/content-teaser/content-teaser.twig" with random(demo.teasers) only %}
      {% endfor %}
    {% else %}
      {% for i in imageless_teasers %}
        {% include "@molecules/content-teaser/content-teaser.twig" with random(demo.imageless_teasers) only %}
      {% endfor %}
    {% endif %}
  {% else %}
    {{ teasers }}
  {% endif %}
</div><!-- /component__teaser-list -->
