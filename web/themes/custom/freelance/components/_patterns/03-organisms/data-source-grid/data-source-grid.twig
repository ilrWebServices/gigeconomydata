<div class="data-source-grid">
  {% if grid_heading %}
    {% include "@atoms/02-text/00-headings/_heading.twig" with {
      "heading_level": 2,
      "heading": grid_heading,
      "heading_base_class": 'title',
      'heading_blockname': 'data-source-grid'
    } %}
  {% endif %}
  {% if pl %}
    {% for i in data_sources %}
      {% include "@molecules/data-source-teaser/data-source-teaser.twig" with demo.data_sources[i] only %}
    {% endfor %}
  {% else %}
    {{ data_sources }}
  {% endif %}
</div><!-- /data-source-grid -->
