{% set content_teaser_modifiers = [
  node.isPromoted() ? 'promoted',
  view_mode ? 'view-mode-' ~ view_mode|clean_class,
  ]
%}
{% set authors = [] %}
{% for author in content.field_author|field_value %}
  {% set authors = authors|merge([author['#title']]) %}
{% endfor %}

{% embed "@molecules/content_teaser/content_teaser.twig"
  with {
    "content_teaser_header": true,
    "content_teaser_date": content.field_publication_date,
    "content_teaser_title": label,
    "content_teaser_title_link": url,
    "content_teaser_link_url": url,
    "content_teaser_body": content.body|render|striptags|raw,
    "content_teaser_img_src": img.uri|image_style('media_thumbnail'),
    "content_teaser_img_alt": img.alt,
  }
%}
{% endembed %}
