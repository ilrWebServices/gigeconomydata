{% set card_modifiers = [
  node.isPromoted() ? 'promoted',
  view_mode ? 'view-mode-' ~ view_mode|clean_class,
  ]
%}
{% set authors = [] %}
{% for author in content.field_author|field_value %}
  {% set authors = authors|merge([author['#title']]) %}
{% endfor %}

{% embed "@molecules/card/01-card.twig"
  with {
    "card_header": true,
    "card_date": content.field_publication_date,
    "card_title": label,
    "card_title_link": url,
    "card_link_url": url,
    "card_body": content.body|render|striptags|raw,
    "card_img_src": img.uri|image_style('media_thumbnail'),
    "card_img_alt": img.alt,
  }
%}
{% endembed %}
